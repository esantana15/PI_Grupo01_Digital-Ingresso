

<header>
  <%- include('./partials/navBar') %>
</header>


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/userCreate.css">
  <script type="text/javascript" src="/javascripts/scripts.js" ></script>
  <title>Digital Ingresso</title>
</head>

<body>
  


    <main>
      <div id="form_userRegistrer">

      <h1 id="form_userRegisterH1">
        Cadastramento de Eventos
      </h1>

        <form id="form-mainForm" method="post" 
              action="/concerto/register" 
              enctype="multipart/form-data" >
              
            <div class="form-group">
                <label for="event">Evento</label>
                <input type="text"
                name="event" 
                required
                class="form-control" 
                placeholder="Evento">
            </div>

            <div class="form-group">
                <label for="location">Local/Arena</label>
                <input type="text" 
                name="location" 
                required
                class="form-control" 
                placeholder="Local/Arena">

            </div>
            <div class="form-group">
                <label for="address">Rua/Numero</label>
                <input type="text" 
                name="address" 
                required
                class="form-control" 
                placeholder="Rua/Número">
            </div>

            <div class="form-group">
                <label for="neighborhood">Bairro</label>
                <input type="text" 
                name="neighborhood" 
                required
                class="form-control" 
                placeholder="Bairro">
              </div>

              <div class="form-group">
                <label for="city">Cidade</label>
                <input type="text" 
                name="city" 
                required
                class="form-control" 
                placeholder="Cidade">
              </div>

              <div class="form-group">
                <label for="date">Data</label>
                <input type="date" 
                name="date" 
                required
                class="form-control" 
                placeholder="Data">
              </div>

              <div class="form-group">
                <label for="hour">Horário</label>
                <input type="datetime" 
                name="hour" 
                required
                class="form-control" 
                placeholder="Hora">
              </div>

              <div class="form-group">
                <label for="price">Preço</label>
                <input type="number" 
                name="price" 
                required
                class="form-control" 
                placeholder="Preço">
              </div>

                <div class="form-group">
                  <label for="picture">Foto do Evento</label>
                  <input type="file" 
                  name="picture" 
                  required
                  class="form-control-file" 
                  >
                </div>
                <br>
                <br>
                <div class="submitBTN">
                  <button type="submit" class="submitbtn">Criar Evento</button>
                </div>

          </form>
          </div>
        </main>
        

</body>
