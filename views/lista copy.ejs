<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/lista.css">
    <title>Digital Ingresso</title>
</head>
<body>

    <header>
        <%- include('./partials/header') %>
    </header>


        <main id="main-listPage">
            <div class="firstDiv-listPage">

                <ul class="ul-listPage">
                <% for (item of lista) { %>  
                                   
                <li class="li-listPage">
                        <%= item.evento%>
                    <form method="post" action="/concerto/process-update/id" enctype="multipart/form-data" >
                        <div class="form-listPage">
                            <label for="event">Evento</label>
                            <input class="imput-listPage" 
                            type="text"
                            name="event" 
                            class="form-control"
                            placeholder="<%=item.evento%>">

                        </div>
            
                        <div class="form-listPage">
                            <label for="location">Local/Arena</label>
                            <input class="imput-listPage" 
                            type="text" 
                            name="location" 
                            class="form-control" 
                            placeholder="<%=item.localEvento%>">
            
                        </div>
                        <div class="form-listPage">
                            <label for="address">Rua/Numero</label>
                            <input class="imput-listPage"
                            type="text" 
                            name="address" 
                            value=" "
                            class="form-control" 
                            placeholder="<%=item.ruaEvento%>">
                        </div>
            
                        <div class="form-listPage">
                            <label for="neighborhood">Bairro</label>
                            <input class="imput-listPage"
                            type="text" 
                            name="neighborhood" 
                            value=""
                            class="form-control" 
                            placeholder="<%=item.bairroEvento%>">
                          </div>
            
                          <div class="form-listPage">
                            <label for="city">Cidade</label>
                            <input class="imput-listPage"
                            type="text" 
                            name="city" 
                            class="form-control" 
                            placeholder="<%=item.cidadeEvento%>">
                          </div>
            
                          <div class="form-listPage">
                            <label for="date">Data</label>
                            <input class="imput-listPage"
                            type="date" 
                            name="date" 
                            class="form-control" 
                            placeholder="<%=item.dataEvento%>">
                          </div>
            
                          <div class="form-listPage">
                            <label for="hour">Hor√°rio</label>
                            <input class="imput-listPage"
                            type="datetime" 
                            name="hour" 
                            class="form-control" 
                            placeholder="<%=item.horaEvento%>">
                          </div>
                          <div class="btn-btn-listPage">
                            <div class="btn-listPage">
                                    <form action="">
                                        <button type="submit" class="submitbtn">Atualizar Evento</button>
                                    </form>
                                </div>
                                <div class="btn-listPage">
                                    <form action="/concerto/delete/<%item.id%>" method="post">
                                        <button type="submit" class="submitbtn">Excluir Evento</button>
                                    </form>
                                </div>
                            </div>
                          </form>
            </div>
        </li>
                    
    </div>
                <% } %>
    </ul>




        </main>



</body>
<footer>
    <%- include('./partials/footer') %>
</footer>
</html>


