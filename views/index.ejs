        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol> 
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="/images/home/britney.png" alt="Primeiro Slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/home/bannerDualipa.png" alt="Segundo Slide">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" src="/images/home/bannerColdplay.png" alt="Segundo Slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/home/bannerArtic.png" alt="Segundo Slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/home/bannerAdele.png" alt="Segundo Slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/home/bannerPixote.png" alt="Segundo Slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
