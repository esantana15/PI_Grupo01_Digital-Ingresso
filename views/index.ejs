    <section class='content__presentation'>
      <img id="company-logo" src="/images/imagensEmComum/logo1.png" alt="Digital Ingresso logo">
      <div class='content__presentation__text'>
        <p>"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
          tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
          ullamco laboris nisi utt."</p>
      </div>
    </section>

      <div class="shows__header">
        <div class='shows__header__title'>
          <img src='/images/perfil/codigoBarra.png' />
          <p>confira nossos shows</p>
          <img src='/images/perfil/codigoBarra.png' />
        </div>

        <div id="divShows-HomePage">
          <div id="conteudoShows">
            <% if (concertos && concertos.length > 0) { %>
                        <% concertos.map(concerto => { %>
                        
                <div class="show">            
                        <% console.log("nome da foto ", concerto.fotoEvento) %>
                        <img src='/upload/concertos/<%= concerto.fotoEvento %>' alt=""/>
                    <div class="text">
                        <h1> <%= concerto?.evento %></h1>
                        <h3> <%= concerto?.cidadeEvento %> </h3>
                        <h3> <%= concerto?.dataEvento %>  </h3>

        
                    </div>
                    <form class="showPage-buy1">
                        <input class="showPage-buy" type="button" value="Confira">
                    </form>
                    
                </div>
                <% }) %>
        
                <% } else { %>
                    <h4>Nenhum concerto cadatrado</h4>
                <% } %>
            
            
            </div>

        </div>
      </div>

    </main>

</body>
